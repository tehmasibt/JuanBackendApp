<!-- our product area start -->
<section class="our-product section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Our Product</h2>
                    <p class="sub-title">
                        Lorem ipsum dolor sit amet consectetur adipisicing
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                    <!-- product single item start -->
                    @foreach (var product in Model.Products.Where(p=>!p.IsNewProduct))
                    {
                        <div class="product-item mb-50">
                            <div class="product-thumb">
                                <a href="product-details.html">
                                    <img src="~/assets/img/product/@product.Image" alt="" />
                                </a>
                            </div>
                            <div class="product-content">
                                <h5 class="product-name">
                                    <a href="product-details.html">@product.Name</a>
                                </h5>
                                <div class="price-box">
                                    @if (product.DisCountPrice > 0)
                                    {
                                        <span class="price-regular">$@product.DisCountPrice</span>
                                        <span class="price-old"><del>$@product.Price</del></span>
                                    }
                                    else
                                    {
                                        <span class="price-regular">$@product.Price</span>
                                    }
                                </div>
                                <div class="product-action-link">
                                    <a href="#" data-toggle="tooltip" title="Wishlist">
                                        <i class="ion-android-favorite-outline"></i>
                                    </a>
                                    <a href="#" data-toggle="tooltip" title="Add To Cart">
                                        <i class="ion-bag"></i>
                                    </a>
                                    <a class="productModal" data-toggle="modal" data-target="#quick_view" asp-controller="product" asp-action="Modal" asp-route-id="@product.Id">
                                        <span data-toggle="tooltip" title="Quick View">
                                            <i class="ion-ios-eye-outline"></i>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- our product area end -->
